{
  "buildCommand": "npx prisma generate && next build",
  "framework": "nextjs",
  "installCommand": "npm install",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "PRISMA_GENERATE_DATAPROXY": "true"
  },
  "crons": [
    {
      "path": "/api/cron/cleanup-uploads",
      "schedule": "0 2 1 * *"
    },
    {
      "path": "/api/cron/event-reminders",
      "schedule": "0 2 * * *"
    }
  ]
}
